            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/tracker",
            "args": [
                "tracker_info.txt"
            ],
            "stopAtEntry": false,
            "cwd": ".",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
